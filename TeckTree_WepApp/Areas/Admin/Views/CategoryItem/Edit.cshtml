@model TeckTree_WepApp.Entities.CategoryItem

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>CategoryItem</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <input asp-for="CategoryId" type="hidden" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" rows="3" class="form-control"></textarea> 
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="MediaTybeId" class="control-label"></label>
                <select asp-for="MediaTybeId" class="form-control" asp-items="@Model.MediaTypes">
                    <option value="">--Please Select a Media Type--</option>
                </select>
                <span asp-validation-for="MediaTybeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateTimeItemRealeased" class="control-label"></label>
                <input type="text" id="DateTimeItemRealeased" name="DateTimeItemRealeased" value="@Model.DateTimeItemRealeased.ToString("yyyy-MM-dd")" class="datepicker form-control" />
                <span asp-validation-for="DateTimeItemRealeased" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-categoryId="@Model.CategoryId">Back to List</a>
</div>

@section Scripts{
  
    @{
        await Html.RenderPartialAsync("_DateScriptPartial");
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }